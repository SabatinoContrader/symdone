<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>LoginTraderServlet</servlet-name>
		<servlet-class>com.virtualpairprogrammers.servlets.LoginTraderServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ProdottoServlet</servlet-name>
		<servlet-class>com.virtualpairprogrammers.servlets.ProdottoServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>com.virtualpairprogrammers.servlets.LogoutServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>CanaleServlet</servlet-name>
		<servlet-class>com.virtualpairprogrammers.servlets.CanaleServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<servlet-class>com.virtualpairprogrammers.servlets.RegisterServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginTraderServlet</servlet-name>
		<url-pattern>/LoginTraderServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ProdottoServlet</servlet-name>
		<url-pattern>/ProdottoServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/LogoutServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CanaleServlet</servlet-name>
		<url-pattern>/CanaleServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/RegisterServlet</url-pattern>
	</servlet-mapping>

	<session-config>
		<session-timeout>4000</session-timeout>
	</session-config>

</web-app>
